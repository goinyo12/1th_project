@charset "EUC-KR";
.main
{
	margin-top:20px;
	background-color:#1b1b1b;	
	height:1200px;
}
body
{
	width:100%;
	height:1000px;
}

.sitename
{
	text-align:center;
	font-size:60px;
	padding-top:100px;
}

.login
{
	padding-top	:100px;
}
.span_msg
{
	margin:5px 0 15px 10px;
	font-size:10pt;
	color:#B17C7C;
}
.jointbl
{
	width:350px;
	height:250px;
	margin-left:auto;
	margin-right:auto; 
	font-weight:bold;
}

.userid, .userpw, .userpwck, .name, .nickname, .email, .codenumberck, .gender
{
	width:95%; 
	padding: 10px 0 10px 10px; 
	border-radius:8px;
	border: 1px solid black;
	margin-left:8px;
	font-weight:bold;
	margin-top:10px;
	margin-bottom:10px;
	background-color:#353535;
	color:white;
}

.joinbutton
{
	background-color: black;
	color:white;
	width:95%;
	padding: 10px 0 10px 0;
	border-radius:8px;
	border: 1px solid #c4c4c4;
	margin-left:8px;
	font-weight:bold;
	cursor:pointer;
}
.idchecked
{
	background-color: black;
	color:white;
	width:27%;
	padding: 10px 0 10px 0;
	border-radius:8px;
	border: 1px solid #c4c4c4;
	margin-left:8px;
	font-weight:bold;
}

a
{
	text-decoration:none;
	color: inherit;
}

.codenumber
{
	background-color: black;
	color:white;
	width:40%;
	padding: 10px 0 10px 0;
	border-radius:8px;
	border: 1px solid #c4c4c4;
	margin-left:8px;
	font-weight:bold;
	cursor:pointer;
}
